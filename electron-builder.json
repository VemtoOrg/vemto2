{
    "appId": "app.vemto.v2",
    "publish": "github",
    "afterSign": "electron-builder-notarize",
    "directories": {
        "output": "dist"
    },
    "extraResources": [
        {
            "from": "build/src/main/static",
            "to": "static"
        }
    ],
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "Vemto"
    },
    "win": {
        "target": "nsis",
        "certificateSubjectName": "Tiago Silva Pereira Rodrigues",
        "license": "./src/main/static/License.txt"
    },
    "linux": {
        "target": ["AppImage"]
    },
    "mac": {
        "hardenedRuntime": true,
		"entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist",
        "target": {
            "target": "dmg",
            "arch": ["x64", "arm64"]
        }
    },
    "files": [
        {
            "from": "build/src/main",
            "to": "build/src/main",
            "filter": [
                "**/*",
                "!static"
            ]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": ["**/*"]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": ["**/*"]
        },
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/node_modules/@tiago_silva_pereira/reladb/**/*",
        "!**/node_modules/@tiago_silva_pereira/vemto-template-engine/**/*",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
        "!.VSCodeCounter",
        "!.vscode",
        "!.vemto",
        "!src",
        "!config",
        "!README.md",
        "!scripts",
        "!build",
        "!dist",
        "!vendor",
        "!tests",
        "!logs"
    ]
}
