{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "../../build/main",
        "allowJs": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "paths": {
            "@Main/*": ["./*"],
            "@Renderer/*": ["../renderer/*"],
            "@Common/*": ["../common/*"]
        }
    },
    "exclude": ["static"]
}
