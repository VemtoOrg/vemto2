{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "allowJs": true,
        "paths": {
            "@Main/*": ["../main/*"],
            "@Renderer/*": ["./*"],
            "@Common/*": ["../common/*"]
        },
    },
    "include": [
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.tsx",
        "./**/*.vue",
        "../common/**/*.d.ts",
        "../common/**/*.ts",
    ]
}
