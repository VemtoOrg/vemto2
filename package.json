{
    "name": "vemto",
    "version": "2.0.0",
    "description": "A Laravel code generator and studio",
    "main": "build/src/main/main.js",
    "scripts": {
        "dev": "node scripts/dev-server.js",
        "dev:fast": "set VEMTO_NO_CHECKERS=1 && set VEMTO_NO_EXTENSIONS=1 && node scripts/dev-server.js",
        "no-menu": "set VEMTO_HIDE_MENU=1 && node scripts/dev-server.js",
        "build": "node scripts/build.js && electron-builder",
        "build:win": "node scripts/build.js && electron-builder --win",
        "build:mac": "node scripts/build.js && electron-builder --mac",
        "build:linux": "node scripts/build.js && electron-builder --linux",
        "lint": "eslint ./src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "prettier": "npx prettier . --write",
        "php:compile": "php ./src/php/compile.php",
        "php:test": "set VEMTO_DEBUG=1 && php ./src/php/tests/vendor/bin/phpunit ./src/php/tests/src --verbose",
        "php:test-output": "set VEMTO_DEBUG=1 && php ./src/php/output.php",
        "test:mock": "yarn php:test-output && php ./mock.php",
        "test": "jest --runInBand",
        "test:watch": "jest --watch",
        "test:features": "npm run test -- --selectProjects test-features",
        "test:templates": "npm run test -- --selectProjects test-templates",
        "test:unit": "npm run test -- --selectProjects test-unit"
    },
    "repository": "https://github.com/deluze/electron-vue-template",
    "author": {
        "name": "Deluze",
        "url": "https://github.com/Deluze"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.18.6",
        "@jest/globals": "^29.3.1",
        "@tailwindcss/forms": "^0.5.3",
        "@vitejs/plugin-vue": "^3.0.3",
        "@vue/cli": "^5.0.1",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/eslint-config-typescript": "^11.0.2",
        "autoprefixer": "^10.4.12",
        "babel-plugin-module-resolver": "^4.1.0",
        "chalk": "^4.1.2",
        "chokidar": "^3.5.3",
        "electron": "^20.1.0",
        "electron-builder": "^23.3.3",
        "electron-devtools-installer": "^3.2.0",
        "eslint": "^8.23.1",
        "eslint-plugin-vue": "^9.5.1",
        "jest": "^29.3.1",
        "postcss": "^8.4.16",
        "tailwind-scrollbar": "^2.0.1",
        "tailwindcss": "^3.1.8",
        "tsc-alias": "^1.8.2",
        "typescript": "^4.8.2",
        "vite": "^3.0.9",
        "vite-plugin-checker": "^0.5.1",
        "vue-tsc": "^0.40.13"
    },
    "dependencies": {
        "@heroicons/vue": "^2.0.11",
        "@highlightjs/vue-plugin": "^2.1.0",
        "@jsplumb/browser-ui": "^5.12.0",
        "@jsplumb/connector-bezier": "^5.12.0",
        "@prettier/plugin-php": "^0.19.2",
        "crypto-js": "^4.1.1",
        "highlight.js": "^11.6.0",
        "lodash": "^4.17.21",
        "pinia": "^2.0.22",
        "prettier": "^2.7.1",
        "shelljs": "^0.8.5",
        "uuid": "^9.0.0",
        "vue": "^3.2.36",
        "vue-router": "^4.0.13"
    }
}
